<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="{{ site.lang }}" xml:lang="{{ site.lang }}" {{# direction }}dir="{{.}}" {{/ direction }}color-scheme="auto">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <meta name="author" content="{{ site.author }}">
    {{# published.time }}<meta name="dcterms.date" content="{{.}}">{{/ published.time }}
    <title>{{ title }} | {{ site.title }}</title>
    {{# base }}<base href="{{.}}"/>{{/ base }}
    <link rel="alternate" type="application/atom+xml" title="{{ site.title }}" href="/feed.xml">
    <link rel="alternate" type="application/feed+json" title="{{ site.title }}" href="/feed.json">
    <noscript>
      <link rel="stylesheet" href="/css/noscript.css">
    </noscript>
    <link rel="stylesheet" href="/css/default.css">
    <script>
      {{> color-scheme-load.js }}
      {{> color-scheme-toggle.js }}
    </script>
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.min.js"></script>
    <script>
      {{> katex-load.js }}
    </script>
    {{# site.debug }}<script defer src="https://livejs.com/live.js"></script>{{/ site.debug }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.min.css">
  </head>
  <body>
    {{> header.html }}
    {{# site.debug }}
    <div style="position:fixed; right:3ch; opacity:0.5; z-index:99; color:rgb(255,0,255);">
       DEBUG
    </div>
    {{/ site.debug }}
    <main>
      {{^ naked-main }}
      <article>
      {{/ naked-main }}
        {{^ hide-title }}
        <header id="title-block-header">
          <h1 class="title">{{ title }}</h1>
          {{# subtitle }}<p class="subtitle">{{.}}</p>{{/ subtitle }}
        </header>
        {{/ hide-title }}
        {{& body }}
      {{^ naked-main }}
      </article>
      {{/ naked-main }}
    </main>
    {{> footer.html }}
  </body>
</html>
