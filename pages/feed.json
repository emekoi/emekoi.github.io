{ "version"       : "https://www.jsonfeed.org/version/1.1"
, "title"         : "{{ site.title }}"
, "home_page_url" : "{{ site.url }}"
, "feed_url"      : "{{ site.url }}/feed.json"
, "description"   : "{{ site.description }}"
, "authors"       :
  [ { "name" : "{{ site.author }}"
    , "url"  : "{{ site.url }}"
    }
  ]
, "language"      : "{{ site.lang }}"
, "items"         :
  [ {{# site.posts }}
    {{> feed-item.json }}{{^ last }}, {{/ last }}
    {{/ site.posts }}
  ]
}
